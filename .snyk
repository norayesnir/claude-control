# Snyk (https://snyk.io) policy file, patches or ignores known vulnerabilities.
version: v1.25.0

# Manual configuration
ignore: {}

patch: {}

# Security severity thresholds
language-settings:
  javascript:
    # Fail on high severity issues
    severity-threshold: high
    # Include dev dependencies in scan
    dev: true

# Monitoring settings
monitor: true

# License policy
license-policy:
  # Allowed licenses
  allowedLicenses:
    - MIT
    - ISC
    - Apache-2.0
    - BSD-3-Clause
    - BSD-2-Clause
  
  # Disallowed licenses
  disallowedLicenses:
    - GPL-2.0
    - GPL-3.0
    - AGPL-1.0
    - AGPL-3.0