{
  "security": {
    "authenticationRequired": true,
    "encryptionEnabled": true,
    "logAll": true,
    "logLevel": "info",
    "auditLog": true,
    "denyByDefault": true,
    "maxPendingOperations": 20,
    "sessionTimeout": 3600000,
    "requestSigning": true,
    "intrusionDetection": true,
    "maxRequestSize": 1048576,
    "rateLimitStrict": true,
    "enforceHttps": true,
    "validateAllInputs": true,
    "authorizedTelegramUsers": [123456789]
  },
  "autoApprove": [
    {
      "tool": "Bash",
      "command": "^(ls -la?|pwd|whoami|date|echo '[^;|&`$]*'|npm test|npm run lint)$",
      "requiresAuth": true
    }
  ],
  "denyPatterns": [
    {
      "tool": "Bash",
      "command": ".*(rm -rf|sudo|curl.*[|&;]|wget.*[|&;]|sh.*[|&;]|bash.*[|&;]|exec|eval|system|passthru|shell_exec).*"
    },
    {
      "tool": "*",
      "command": ".*(\\.\\.[\\/\\\\]|[;&|`$()]|<script|javascript:|on\\w+\\s*=).*"
    },
    {
      "tool": "*", 
      "command": ".*(union.*select|drop.*table|delete.*from|insert.*into|update.*set).*",
      "description": "SQL injection patterns"
    }
  ],
  "requireApproval": [
    "*"
  ],
  "telegramEnabled": true,
  "telegramChatId": 123456789,
  "commandWhitelist": {
    "enabled": true,
    "allowedCommands": [
      "ls", "pwd", "whoami", "date", "echo", "cat", "head", "tail", "grep", "find",
      "npm test", "npm run lint", "npm run build", "npm audit",
      "git status", "git log", "git diff"
    ]
  },
  "fileSystemSecurity": {
    "restrictedPaths": ["/etc", "/usr", "/bin", "/sbin", "/var", "/root", "/home"],
    "allowedExtensions": [".json", ".log", ".txt", ".md", ".js"],
    "maxFileSize": 10485760,
    "preventPathTraversal": true
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "requiresAuth": true,
      "encryptMessages": true,
      "rateLimited": true,
      "disabled": false
    },
    "iMessage": {
      "enabled": false,
      "requiresAuth": true,
      "encryptMessages": true
    },
    "dashboard": {
      "enabled": true,
      "requiresAuth": true,
      "httpsOnly": true,
      "sessionManagement": true
    }
  },
  "notifications": {
    "enabled": true,
    "securityAlerts": true,
    "suspiciousActivity": true,
    "failedAttempts": true,
    "channels": ["dashboard", "telegram"]
  },
  "timeout": 300,
  "emergencyShutdown": {
    "enabled": true,
    "maxFailedAttempts": 5,
    "suspiciousActivityThreshold": 10,
    "autoLockdown": true
  }
}